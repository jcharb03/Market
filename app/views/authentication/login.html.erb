
<h2 style="padding-left: 10px;">Log in</h2>
<%= content_tag :h3 do %>
Failed username password combination
<% end if @failed_attempt %>

<%= form_for(:session, :url => '/authenticate') do |f| %>
    <table>
  <div class="field">
    <tr><td><%= f.label :email %></td>
    <td><%= f.text_field :email %></td></tr>
  </div>
  <div class="field">
    <tr><td><%= f.label :password %></td>
    <td><%= f.password_field :password %></td></tr>
  </div>
  <div class="actions">
    <tr><td><%= f.submit "Sign in" %></td></tr>
  </div>
        </table>
<% end %>

